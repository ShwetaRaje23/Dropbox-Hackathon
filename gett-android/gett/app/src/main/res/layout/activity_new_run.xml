<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="141dp"
        android:layout_alignParentTop="true"
        android:background="#4e4d48"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/cool_view_pager"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="24dp"/>

    <TextView
        android:id="@+id/cool_page_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cool_view_pager"
        android:layout_marginTop="55dp"
        android:text="What's on the menu?"/>

    <Button
        android:id="@+id/cool_button"
        android:layout_width="185dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/cool_page_description"
        android:layout_marginTop="37dp"
        android:layout_gravity="center_horizontal"
        android:text="Pick a place"/>

    <ImageView
        android:id="@+id/cool_pagination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cool_button"
        android:layout_marginTop="82dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/pagination_1"/>

</RelativeLayout>