<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

    <EditText
        android:id="@+id/destination_edit_text"
        android:layout_width="200dp"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@id/destination_edit_text"
        android:layout_alignLeft="@id/destination_edit_text"
        android:layout_alignRight="@id/destination_edit_text"
        android:text="Let's go!"
        android:onClick="onLetsGoButtonClick"
        />

</RelativeLayout>